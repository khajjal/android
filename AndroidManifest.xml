<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.we_split"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="WE/SPLIT"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.vacuumhead.wesplit.android.Splash"
            android:label="WE/SPLIT" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vacuumhead.wesplit.android.MainActivity"
            android:label="WE/SPLIT" >
        </activity>    
        <activity
            android:name="com.vacuumhead.wesplit.android.NewUserActivity"
            android:label="New User" >
        </activity>
    </application>

</manifest>